
<% if listing.errors.any? %>
      <% listing.errors.full_messages.each do |error| %>
          <p><%= error %> </p>
      <% end %>
<% end %> 


<%= form_with model: listing, local: true do |form| %>
<form>
<div class="row">
  <div class="col-md-4">
  <%= form.label :title %>
  <%= form.text_field :title, class:"form-control" %>
  </div>
</div>



<div class="row">
  <div class="col-md-4">
  <%= form.label :price %>
  <%= form.number_field :price, min: 0, class:"form-control"%>
  </div>
</div>

<div class="row">
  <div class="col-md-4">
  <%= form.label :quantity %>
  <%= form.number_field :quantity, min: 0,class:"form-control" %>
  </div>
</div>

<div class="form-group">
  
  <%= form.label :category %>
  <%= form.collection_select :category_id, categories, :id, :name, include_blank: true
  %>
  
</div>

<div class="form-group">
  <%= form.label :measurement_unit %>
  <%= form.collection_select :munit_id, munits, :id, :name, include_blank: true
  %>
</div>

<div class="row">
  <div class="col-md-6">
  <%= form.label  :description%>
  <%= form.text_area :description,class:"form-control" %>
  </div>
</div>

<div class="form-group row">  
<div class=" col-md-4 ">
  <%= form.label :photo %> 
  <%= form.file_field :photo, accept: 'image/png,image/gif,image/jpeg,image/jpg' %>
</div>
  
</div>

<div>
  <%= form.submit %>
</div>
<% end %>
</form>
