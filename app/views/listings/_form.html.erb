<h2>Create a Listing</h2>


<%= form_with model: listing, local: true do |form| %>
<div>
  <%= form.label :title %>
  <%= form.text_field :title %>
</div>



<div>
  <%= form.label :price %>
  <%= form.number_field :price, min: 0 %>
</div>

<div>
  <%= form.label :quantity %>
  <%= form.number_field :quantity, min: 0 %>
</div>

<div>
  <%= form.label :category %>
  <%= form.collection_select :category_id, categories, :id, :name, include_blank: true
  %>
</div>

<div>
  <%= form.label :measurement_unit %>
  <%= form.collection_select :munit_id, munits, :id, :name, include_blank: true
  %>
</div>

<div>
  <%= form.label  :description%>
  <%= form.text_area :description %>
</div>

<div>
  <%= form.label :photo %> 
  <%= form.file_field :photo, accept: 'image/png,image/gif,image/jpeg,image/jpg' %>
</div>

<div>
  <%= form.submit %>
</div>
<% end %>
