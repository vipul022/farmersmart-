<div class="container"> 
<h3>Search Results</h3>

 
<div class = "row justify-content-around">
   <% @listings_found.each do |listing| %>
   <div class="card text-center my-3 col-md-4 col-xs-12" style="max-width: 30%; min-width: 18rem;" >
   <%# rendered the partial for displaying image uploaded by user and if no image is displayed, default image will be displayed %>
    <div class="card-body-index">
     <div class="img-index">
       <%= render "set-img", listing: listing %>
     </div>
    <h4><%= listing.title %></h4>
    <p>Price:<%=number_to_currency(listing.price)%></p>
    <p>Quantity:<%=listing.munit.name  %></p>
    <p>Category:<%=listing.category.name  %></p>
     
    <%= button_to "view", listing, method: :get, class: "btn btn-primary" %>
    </div>
  </div>
    
 <% end %> 
</div>
</div>

    
   
    
  
