<h2>Welcome To FarmerSmart</h2>

<% @listings.each do |listing| %>
  <div class = "card">
    <%# <%= logic for diplaying default image for the listing if no image is attached %> 
    <% if listing.photo.attached? %>
        <%= image_tag listing.photo %>
      <% else %>
        <%= image_tag "mix-veg.png" %>
 <% end %>
    <h4><%= listing.title %></h4>
    <p>Price:<%=number_to_currency(listing.price)%></p>
    <p>Quantity:<%=listing.munit.name  %></p>
    <p>Category:<%=listing.category.name  %></p>
    <%# <%= link_to "View", listing %> 
    <%= button_to "view", listing, method: :get, class: "btn btn-primary" %>

    
   
    
  
    </div>
    
 <% end %> 
